@model IEnumerable<ECommerce.Entities.Category>

<!-- Navbar Start -->
<div class="container-fluid mb-5">
    <div class="row border-top px-xl-5">
        <div class="col-lg-3 d-none d-lg-block">
            <a class="btn shadow-none d-flex align-items-center justify-content-between bg-primary text-white w-100" data-toggle="collapse" href="#navbar-vertical" style="height: 65px; margin-top: -1px; padding: 0 30px;">
                <h6 class="m-0">Categories</h6>
                <i class="fa fa-angle-down text-dark"></i>
            </a>
            <nav class="collapse show navbar navbar-vertical navbar-light align-items-start p-0 border border-top-0 border-bottom-0" id="navbar-vertical">
                <div class="navbar-nav w-100 overflow-hidden" style="height: 410px">
                    <div class="nav-item dropdown">
                        <a href="#" class="nav-link" data-toggle="dropdown">Shoes & Accessories <i class="fa fa-angle-down float-right mt-1"></i></a>
                        <div class="dropdown-menu position-absolute bg-secondary border-0 rounded-0 w-100 m-0">
                            <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="1" class="nav-item nav-link">Footwear</a>
                            <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="2" class="nav-item nav-link">Jewellery</a>
                            <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="3" class="nav-item nav-link">Hats & Caps</a>
                            <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="4" class="nav-item nav-link">Sunglasses</a>
                        </div>
                    </div>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="5" class="nav-item nav-link">T-Shirts</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="6" class="nav-item nav-link">Tracksuits</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="7" class="nav-item nav-link">Jeans</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="8" class="nav-item nav-link">Hoodies & Sweatshirts</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="9" class="nav-item nav-link">Coats & Jackets</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="10" class="nav-item nav-link">Trousers</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="11" class="nav-item nav-link">Shorts</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="12" class="nav-item nav-link">Shirts</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="13" class="nav-item nav-link">Joggers</a>
                    <a asp-controller="Category" asp-action="ProductsByCategory" asp-route-categoryId="14" class="nav-item nav-link">Cargos</a>
                </div>
            </nav>
        </div>
        <div class="col-lg-9">
            <nav class="navbar navbar-expand-lg bg-light navbar-light py-3 py-lg-0 px-0">
                <a href="" class="text-decoration-none d-block d-lg-none">
                    <h1 class="m-0 display-5 font-weight-semi-bold"><span class="text-primary font-weight-bold border px-3 mr-1">E</span>Shopper</h1>
                </a>
                <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#navbarCollapse">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse justify-content-between" id="navbarCollapse">
                    <div class="navbar-nav mr-auto py-0"></div>
                    <ul class="navbar-nav">
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <button id="logoutButton" class="btn btn-danger">Logout</button>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" style=" filter: drop-shadow(2px 4px 6px black);" asp-area="" asp-controller="Account" asp-action="Login">Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" style=" filter: drop-shadow(2px 4px 6px black);" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <div id="header-carousel" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active" style="height: 410px;">
                        <img class="img-fluid" src="img/fashion-trends.webp" style="padding:revert-layer; height:auto;" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                @*                                 <h4 class="text-light text-uppercase font-weight-medium mb-3">10% Off Your First Order</h4>
                                <h3 class="display-4 text-white font-weight-semi-bold mb-4">Fashionable Dress</h3> *@
                                <a asp-controller="Category" asp-action="AllProducts" class="btn btn-light py-2 px-3">All Products</a>
                            </div>
                        </div>
                    </div>
                    <div class="carousel-item" style="height: 410px;">
                        <img class="img-fluid" style="height:auto;" src="img/fashion_styles_guys_1000.jpg" alt="Image">
                        <div class="carousel-caption d-flex flex-column align-items-center justify-content-center">
                            <div class="p-3" style="max-width: 700px;">
                                @*                                 <h4 class="text-light text-uppercase font-weight-medium mb-3">10% Off Your First Order</h4>
                                <h3 class="display-4 text-white font-weight-semi-bold mb-4">Reasonable Price</h3> *@
                                <a asp-controller="Category" asp-action="AllProducts" class="btn btn-light py-2 px-3">All Products</a>
                            </div>
                        </div>
                    </div>
                </div>
                <a class="carousel-control-prev" href="#header-carousel" data-slide="prev">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-prev-icon mb-n2"></span>
                    </div>
                </a>
                <a class="carousel-control-next" href="#header-carousel" data-slide="next">
                    <div class="btn btn-dark" style="width: 45px; height: 45px;">
                        <span class="carousel-control-next-icon mb-n2"></span>
                    </div>
                </a>
            </div>
        </div>
    </div>
</div>
<!-- Navbar End -->