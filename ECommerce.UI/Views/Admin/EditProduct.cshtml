@model ECommerce.Entities.Product

@{
    ViewData["Title"] = "Edit Product";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="EditProduct" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId" class="control-label"></label>
        <select asp-for="CategoryId" class="form-control" asp-items="@(new SelectList(ViewData["Categories"] as IEnumerable<ECommerce.Entities.Category>, "Id", "Name"))"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImagePath" class="control-label">Current Image</label><br />
        @if (!string.IsNullOrEmpty(Model.ImagePath))
        {
            <img src="@Model.ImagePath" alt="Product Image" width="150" />
        }
    </div>

    <div class="form-group">
        <label for="imageFile">Upload New Image</label>
        <input type="file" name="imageFile" class="form-control-file" />
    </div>

    <div class="form-group">
        <label asp-for="DetailsCare" class="control-label"></label>
        <textarea asp-for="DetailsCare" class="form-control"></textarea>
        <span asp-validation-for="DetailsCare" class="text-danger"></span>
    </div>

    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>

<a href="@Url.Action("Products")" class="btn btn-secondary">Back to List</a>
