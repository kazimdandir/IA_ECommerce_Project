@model ECommerce.Entities.Product

@{
    ViewData["Title"] = "DeleteProduct";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>@ViewData["Title"]</h2>

<div>
    <h3>Are you sure you want to delete this product?</h3>
    <div>
        <h4>Product</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                Name
            </dt>
            <dd class="col-sm-10">
                @Model.Name
            </dd>
            <dt class="col-sm-2">
                Price
            </dt>
            <dd class="col-sm-10">
                @Model.Price.ToString("C")
            </dd>
            <dt class="col-sm-2">
                Category
            </dt>
            <dd class="col-sm-10">
                @Model.Category.Name
            </dd>
        </dl>
    </div>

    <a asp-controller="Category" asp-action="DeleteProductConfirmed" class="btn btn-danger">Delete</a>

